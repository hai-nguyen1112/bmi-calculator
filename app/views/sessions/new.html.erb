<div id='login_error' class="alert alert-danger"><%=flash.notice%></div>

<h1 id="login">Login</h1>

<div class="form">
  <%=form_tag '/login' do%>
    <div class="form-group">
    <%=label_tag :username%>
    <%=text_field_tag :username%>
    </div>
    <div class="form-group">
    <%=label_tag :password%>
    <%=password_field_tag :password%>
    </div>
    <%=submit_tag "Login", class: "btn btn-primary"%>
  <%end%>
</div>
